<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edgar.project.index"
    android:orientation="vertical"
    >
    <!-- android:paddingTop="@dimen/activity_vertical_margin"  android:background="@drawable/simple"-->
  <!--  <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Project by Edgar Doken (cs/10/0952), MAUTECH, Yola"
        android:textColor="#90f9f2"/>
        -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Edgars Grades!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/btnstart"
        android:text="START NEW EXAM"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        android:onClick="startNew"
        />

    <Button
        android:id="@+id/btnresume"
        android:text="CONTINUE EXAM"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="50dp"
        android:onClick="resumeExam"
        />

    <Button
        android:id="@+id/btnhighscore"
        android:text="HIGH SCORE"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="50dp"
        android:onClick="getHighScore"
        />


</LinearLayout>
</ScrollView>